<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_contributions"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imgCardContributionsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66122126" />

                <!--<TextView-->
                <!--android:id="@+id/txtCardAddedBy"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:padding="6dp"-->
                <!--android:text="User"-->
                <!--android:textColor="#AAFFFFFF" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/imgCardContributionsPostType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whole_plant" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCardContributionsPlantName"
                        android:text="plant name"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutContributionsViewsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_view_eye"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txtCardContributionsViewsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/layoutContributionsViewsNumber"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_like"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txtCardContributionsLikesNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
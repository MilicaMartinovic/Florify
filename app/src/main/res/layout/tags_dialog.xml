<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/round_corners"
    android:backgroundTint="@color/white">

<TextView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Add tags (space separated)"
    android:textColor="@color/darkerBlueGreen"
    android:layout_marginBottom="10dp"
    />
<EditText
    android:id="@+id/etTagsDialogTags"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:maxLines="5"
    android:hint="About plant..."
    android:background="@drawable/round_corners"
    android:backgroundTint="@color/lighterGreen"
    android:textColor="@color/darkerBlueGreen"

    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btnTagsDialogOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerBlueGreen"
            android:text="OK"/>
        <Button
            android:id="@+id/btnTagsDialogCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerBlueGreen"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>
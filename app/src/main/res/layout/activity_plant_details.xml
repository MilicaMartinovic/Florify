<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".PlantDetailsActivity"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgPlantDetailsImage"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66122126"/>

                <LinearLayout
                    android:id="@+id/layoutViewsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_view_eye"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="7dp"/>

                    <TextView
                        android:id="@+id/txtPlantDetailViewsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/layoutViewsNumber"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_like"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txtPlantDetailLikesNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPlantDetailPlantName"
                android:text="Plant's name"
                android:textSize="26sp"
                android:textColor="@color/darkerBlueGreen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added by:  "
                    android:textSize="13sp"
                    android:textColor="#AA122126"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPlantDetailAddedBy"
                    android:text="User"
                    android:textSize="13sp"
                    android:textColor="@color/darkerBlueGreen"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtPlantDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/darkerBlueGreen"
                android:textSize="12sp" />

            <me.gujun.android.taggroup.TagGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tabGroupPlantDetailTags"
                app:atg_isAppendMode="true"
                app:atg_textColor="@color/darkerBlueGreen"
                app:atg_backgroundColor="#DFECF0"
                app:atg_horizontalPadding="5dp"
                app:atg_verticalPadding="3dp"
                app:atg_verticalSpacing="5dp"
                app:atg_horizontalSpacing="5dp"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

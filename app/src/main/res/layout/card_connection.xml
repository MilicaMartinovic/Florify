<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:id="@+id/connectionRequestsLayoutParent"
    android:paddingBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default_profile_picture"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
                    app:riv_tile_mode="repeat"
                    android:id="@+id/imgProfileConnectionRequests"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Username"
                    android:textColor="@color/darkerBlueGreen"
                    android:textSize="15dp"
                    android:id="@+id/txtUsernameConnectionRequests"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Serbia, Kursumlija"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/darkerBlueGreen"
                    android:layout_marginTop="20dp"
                    android:textSize="12dp"
                    android:id="@+id/txtMotherlandConnectionRequests"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/ic_badge_holo_darkerbluegreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_badge_holo_darkerbluegreen" />

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Badge"
                    android:textColor="@color/darkerBlueGreen"
                    android:textSize="12dp"
                    android:layout_toStartOf="@+id/ic_badge_holo_darkerbluegreen"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtBadgeConnectionRequests"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Awaiting connection approval"
                    android:textStyle="italic"
                    android:id="@+id/txtConnectionCardApproved"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/darkerBlueGreen"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkerBlueGreen"/>
</LinearLayout>
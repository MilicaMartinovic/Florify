<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtCardPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant name"
                android:textColor="@color/darkerBlueGreen"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCardDescrpition"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/txtCardPlantName"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:maxLines="7"
                android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
                android:textColor="@color/darkerBlueGreen"
                android:textSize="11sp" />

            <!--<TextView-->
                <!--android:id="@+id/txtCardDate"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:textColor="#AA122126"-->
                <!--android:text="05.06.9996" />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65">

            <ImageView
                android:id="@+id/imgCardImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66122126" />

                <TextView
                    android:id="@+id/txtCardAddedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="6dp"
                    android:text="User"
                    android:textColor="#AAFFFFFF" />

                <LinearLayout
                    android:id="@+id/layoutViewsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_view_eye"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txtCardViewsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/layoutViewsNumber"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_like"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txtCardLikesNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>